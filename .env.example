# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Frontend (Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_GATEWAY_URL=/api-minimarket
VITE_USE_MOCKS=true
# Optional (only if a real DSN exists; do not log the value):
VITE_SENTRY_DSN=

# CI/CD Configuration
# Used by GitHub Actions scripts and verify-deploy
PROJECT_ID=your-project-id
ACCESS_TOKEN=your-access-token
DB_PASSWORD=your-db-password

# Edge Function Secrets (set in Supabase, values never committed)
API_PROVEEDOR_SECRET=your-shared-secret
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@example.com
# Optional alias (legacy compatibility):
EMAIL_FROM=noreply@example.com

# Application Settings
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
REQUIRE_ORIGIN=true
NOTIFICATIONS_MODE=simulation
