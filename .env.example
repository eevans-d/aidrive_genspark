# =============================================================================
# VARIABLES DE ENTORNO - MINI MARKET BACKEND
# =============================================================================
# Copiar este archivo a .env y configurar los valores según el entorno

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE SUPABASE
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE BASE DE DATOS
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=minimarket_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:password@localhost:5432/minimarket_db

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE APLICACIÓN
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=minimarket-backend
APP_VERSION=1.0.0
APP_PORT=3000
API_BASE_URL=http://localhost:3000/api

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE=logs/app.log

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE TESTING
# -----------------------------------------------------------------------------
TEST_DB_NAME=minimarket_test_db
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/minimarket_test_db

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE CI/CD
# -----------------------------------------------------------------------------
DEPLOY_ENV=staging
BUILD_NUMBER=1
COMMIT_SHA=latest

# -----------------------------------------------------------------------------
# CONFIGURACIÓN EXTERNA
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
JWT_SECRET=your_jwt_secret_key_here

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE MONITOREO
# -----------------------------------------------------------------------------
MONITORING_ENABLED=true
ALERT_EMAIL=admin@minimarket.com
SENTRY_DSN=your_sentry_dsn_here
