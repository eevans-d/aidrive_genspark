# Ejemplo de variables para producci贸n.
# Copiar como .env.production.secrets (NO commitear la versi贸n con valores reales).

# Servidor y acceso SSH producci贸n
PROD_HOST=prod.example.com
PROD_USER=deploy
# Ruta a clave privada segura (no compartir)
PROD_KEY_FILE=~/.ssh/id_rsa_prod
# Alternativa incrustada (desaconsejado)
# PROD_KEY="-----BEGIN OPENSSH PRIVATE KEY-----\n...\n-----END OPENSSH PRIVATE KEY-----\n"

# GHCR token con permiso read:packages (y si necesitas push en futuro: write:packages)
PROD_GHCR_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# API keys producci贸n (generar con script; no reutilizar staging)
PROD_DASHBOARD_API_KEY=changeme-backend-api-key-prod
# Opcional para UI si el frontend hace llamadas directas
PROD_DASHBOARD_UI_API_KEY=changeme-ui-api-key-prod

# Flags de endurecimiento
DASHBOARD_FORCE_HTTPS=true
DASHBOARD_ENABLE_HSTS=true
DASHBOARD_ALLOWED_HOSTS=dashboard.midominio.com

# Logging
DASHBOARD_LOG_LEVEL=INFO
DASHBOARD_LOG_BACKUP_COUNT=14

